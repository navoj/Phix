integer unicodeflag -- (one of the following four constants)
constant ANSI    = 0,
         UTF8    = 1,
         UTF16LE = 2,
         UTF16BE = 3

function get_unicode_char(integer fn)
integer ch, ch2
    ch = getc(fn)
    if ch!=-1 then
        ch2 = getc(fn)
        if unicodeflag=UTF16LE then
            if ch2 then -- (speedwise)
                ch += ch2*#100
            end if
        else -- UTF16BE
            ch = ch2+ch*#100
        end if
    end if
    return ch
end function

