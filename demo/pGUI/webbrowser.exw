include pGUI.e

Ihandle hDialog, hToolBar, hUrlEntry, hGoButton, hWebBrowser

function on_go(Ihandle /*ih*/)
    IupStoreAttribute(hWebBrowser, "VALUE", IupGetAttribute(hUrlEntry, "VALUE"))
    return IUP_DEFAULT
end function

function on_navigate_cb(Ihandle /*ih*/, atom pUrl)
    IupSetAttribute(hUrlEntry, "VALUE", pUrl)
    return IUP_DEFAULT
end function

function on_completed_cb(Ihandle /*ih*/, atom pUrl)
    IupSetAttribute(hUrlEntry, "VALUE", pUrl)
    return IUP_DEFAULT
end function

procedure create_gui()
    hUrlEntry = IupText("EXPAND=HORIZONTAL")
    hGoButton = IupButton("Go",NULL,Icallback("on_go"))
    hToolBar = IupHbox({hUrlEntry, hGoButton})

    hWebBrowser = IupWebBrowser()
    IupSetAttributes(hWebBrowser, "EXPAND=YES")
    IupSetCallback(hWebBrowser, "NAVIGATE_CB", Icallback("on_navigate_cb"))
    IupSetCallback(hWebBrowser, "COMPLETED_CB", Icallback("on_completed_cb"))

    hDialog = IupDialog(IupVbox({hToolBar, hWebBrowser}, "MARGIN=5x5,GAP=5"))
    IupSetAttributes(hDialog, `TITLE="EuIup Web Browser"`)
end procedure

procedure main()
    IupOpen()

    create_gui()

    IupShow(hDialog)

    -- Load our initial page
    IupStoreAttribute(hWebBrowser, "VALUE", "http://openeuphoria.org")
-- not a chance:
--  IupStoreAttribute(hWebBrowser, "VALUE", "C:\\Program Files (x86)\\Phix\\demo\\raytrace\\raycastdemo.html")

    IupMainLoop()
    IupClose()
end procedure

main()

